<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/full_screen_astro_scroll"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/astro_full_screen_image"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

<!--        <ProgressBar-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/astro_progress_bar"-->
<!--            android:layout_centerInParent="true"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/astro_full_image_title"
            android:layout_marginTop="26dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@id/astro_full_screen_image"
            app:layout_constraintRight_toLeftOf="@id/astro_image_date" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/astro_image_date"
            android:layout_marginTop="24dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@id/astro_full_screen_image"
            app:layout_constraintLeft_toRightOf="@id/astro_full_image_title" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textSize="16sp"
            android:id="@+id/astro_image_description"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@id/astro_full_image_title"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_copyright"
            android:layout_marginTop="12dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@id/astro_image_description"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
